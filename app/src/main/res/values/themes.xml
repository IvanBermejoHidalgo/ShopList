<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialPuig" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SocialPuig2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SocialPuig.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialPuig.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialPuig.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="tab_layout">
        <item name="android:textColor">#575757</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Base.Theme.Socialpuig" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
    <style name="Theme.SocialPuig3" parent="Base.Theme.Socialpuig">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="toolbar" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Primary brand color. -->
        <item name="android:background">@color/white</item>
    </style>
    <style name="texto_pantalla_favoritos" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/gris_oscuro</item>
    </style>
    <style name="fondo_perfil" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/fondo_perfil_claro</item>
    </style>

    <style name="iconos_perfil" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="tint">@color/black</item>
        <item name="android:background">@color/transparente</item>
    </style>
    <style name="lineas_separatorias_perfil" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/gris_claro_lineas</item>
    </style>
    <style name="edittext" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Primary brand color. -->
        <item name="boxStrokeColor">@color/text_field_claro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#D9D9D9</item>
    </style>
    <style name="linea_separatoria_editar_perfil" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/gris_oscuro</item>
    </style>
    <style name="logo_app_style" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:src">@drawable/logosplash</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStylegray_901"
    tools:context=".ajustesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:text="NOTICIAS" />

    <ImageView android:id="@+id/line_15"
        android:src="@drawable/line_9"
        android:contentDescription="line_9"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_width="370dp"
        android:layout_marginLeft="40dp"
        android:layout_height="5dp" />


    <LinearLayout
        android:id="@+id/noticiasnuno"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_reddos"
        android:orientation="horizontal">


        <!-- Texto "cuenta" -->
        <TextView
            android:id="@+id/cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Recibir cualquier notificación  de las\n
ultima noticias de la pantalla de inicio."
            android:textAlignment="center"
            android:textColor="@color/grismenuletra"
            android:textSize="17dp" />

        <!-- Espacio entre el texto y la imagen -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Imagen "imgvec" -->

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/material_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:trackTint="@color/rojolineas"
            app:thumbTint="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>






    <TextView
        android:layout_width="match_parent"

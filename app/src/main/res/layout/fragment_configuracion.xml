<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_bg___frame_169_shape"
    tools:context=".ConfiguracionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:text="MI CUENTA" />

    <ImageView android:id="@+id/line_10"
        android:src="@drawable/line_3"
        android:contentDescription="line_9"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_width="370dp"
        android:layout_marginLeft="40dp"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/configuracionuno"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/border_blackdos"
        android:orientation="horizontal">

        <!-- Texto "cuenta" -->
        <TextView
            android:id="@+id/cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/grismenuletra"
            android:textSize="17dp" />

        <!-- Espacio entre el texto y la imagen -->
        <Space
            android:layout_width="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <!-- Imagen "imgvec" -->
        <ImageView
            android:id="@+id/imgvec"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/vector_ek1" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="203dp"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:text="COMPRAS" />

    <ImageView android:id="@+id/line_11"
        android:src="@drawable/line_3"

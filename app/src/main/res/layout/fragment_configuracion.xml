        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:text="SOPORTE" />

    <ImageView android:id="@+id/line_12"
        android:src="@drawable/line_3"
        android:contentDescription="line_9"
        android:layout_marginStart="15dp"

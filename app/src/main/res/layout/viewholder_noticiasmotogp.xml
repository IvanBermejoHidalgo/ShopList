<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/groupStylegray_901"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        style="@style/groupStylegray_901"
        android:layout_height="wrap_content"
        android:background="@drawable/background_red_border"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/noticiamotogp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/imagenCancion"
                android:textAlignment="center"
                android:background="@color/azulprimario"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/imgnotimotogp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/descnotimotogp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:textAlignment="center"
                android:textColor="@color/whiteflojo"
                android:background="@color/azulprimario"
                android:textSize="18sp"
                android:paddingBottom="15dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/_bg___frame_169_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen de ShopList"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp" />

    <!-- Total de dinero generado -->
    <TextView
        android:id="@+id/totalComprasTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total de dinero generado: 0€"
        android:textSize="18sp"
        android:padding="8dp"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:background="@drawable/bordeblancopost"
        app:layout_constraintTop_toBottomOf="@id/headerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Número de pedidos -->
    <TextView
        android:id="@+id/numeroPedidosTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Número de pedidos: 0"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/bordeblancopost"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/totalComprasTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="16dp" />

    <!-- Gráfico de Compras por Marca -->
    <TextView
        android:id="@+id/graficoBrandTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gráfico de Compras por Marca"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/bordeblancopost"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/numeroPedidosTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Gráfico de Compras por Género -->
    <TextView
        android:id="@+id/graficoGeneroTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gráfico de Compras por Género"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/bordeblancopost"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/graficoBrandTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Usuarios Registrados -->
    <TextView
        android:id="@+id/UsuariosTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuarios Registrados en la Aplicación"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/bordeblancopost"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/graficoGeneroTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón de Logout -->
    <Button
        android:id="@+id/logout"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#293B72"
        android:text="CERRAR SESIÓN"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

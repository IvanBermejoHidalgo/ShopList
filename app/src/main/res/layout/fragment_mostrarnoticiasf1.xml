<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_red_border"
            android:padding="10dp"
            tools:context=".mostrarCancionesFragment">

            <TextView
                android:id="@+id/nombrenoticiaf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Contenido -->

                <!-- LÃ­nea roja -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/rojoprimario" />

            </LinearLayout>

            <TextView
                android:id="@+id/descripcionnoticiaf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/whiteflojo"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/imagennoticiaf1"
                android:layout_width="wrap_content"
                android:layout_marginTop="14dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/resumenunonoticiaf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/whiteflojo"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/resumendosnoticiaf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/whiteflojo"
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/imagennoticiaf12"
                android:layout_width="wrap_content"
                android:layout_marginTop="14dp"
                android:adjustViewBounds="true"
                android:background="@drawable/background_red_border"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/volver"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="240dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/red_901"
                android:text="VOLVER"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>

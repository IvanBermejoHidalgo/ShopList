    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnprice"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent" android:orientation="vertical">

        <TextView android:ellipsize="end" android:id="@+id/txtPrice"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="USERNAME:"
            style="@style/txt_1" tools:text="USERNAME:"/>

        <EditText
            android:background="@drawable/rectangle_bg_bluegray_100_border_red_901"
            android:ellipsize="end"
            android:hint="Username"
            android:id="@+id/usernametxt" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:paddingBottom="13dp"
            android:paddingEnd="30dp"
            android:paddingStart="14dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColorHint="@color/gray_600"
            style="@style/etSolidOutline_2" tools:ignore="Autofill"/>

        <TextView android:ellipsize="end"
            android:id="@+id/txtCorreoelectrn"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Correo electrónico:"
            style="@style/txt_1" tools:text="Correo electrónico:"/>


        <EditText
            android:id="@+id/emailEditTextreg"
            android:background="@drawable/rectangle_bg_bluegray_100_border_red_901"
            android:ellipsize="end"
            android:hint="Correo electrónico"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:paddingBottom="13dp"
            android:paddingEnd="30dp"
            android:paddingStart="11dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColorHint="@color/gray_600"
            style="@style/etSolidOutline_2" tools:ignore="Autofill"/>

        <TextView android:ellipsize="end"
            android:id="@+id/txtCONTRASEA"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="CONTRASEÑA:"
            style="@style/txt_9" tools:text="CONTRASEÑA:"/>

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowpassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent" android:orientation="horizontal">

            <EditText
                android:id="@+id/passwordEditText"
                android:background="@drawable/rectangle_bg_bluegray_100_border_red_902"
                android:ellipsize="end" android:hint="**********"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.77"
                android:layout_width="0dp"
                android:paddingBottom="15dp"
                android:paddingEnd="30dp"
                android:paddingStart="14dp"
                android:paddingTop="16dp"
                android:singleLine="true"
                android:textColorHint="@color/bluegray_400"
                style="@style/etSolidOutline_1" tools:ignore="Autofill"/>



        </LinearLayout>






        <TextView android:ellipsize="end"
            android:id="@+id/txtCONTRASEA2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="CONFIRMAR CONTRASEÑA:"
            style="@style/txt_9" tools:text="CONFIRMAR CONTRASEÑA:"/>

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowpassword2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent" android:orientation="horizontal">

            <EditText
                android:id="@+id/passwordEditText2"
                android:background="@drawable/rectangle_bg_bluegray_100_border_red_902"
                android:ellipsize="end" android:hint="**********"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.77"
                android:layout_width="0dp"
                android:paddingBottom="15dp"
                android:paddingEnd="30dp"
                android:paddingStart="14dp"
                android:paddingTop="16dp"
                android:singleLine="true"
                android:textColorHint="@color/bluegray_400"
                style="@style/etSolidOutline_1" tools:ignore="Autofill"/>



        </LinearLayout>






        <LinearLayout
            android:id="@+id/linearRowlineone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="28dp"
            android:layout_marginTop="20dp"
            android:gravity="end"


            android:orientation="horizontal">

            <View
                android:id="@+id/lineLineOne"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_weight="0.48"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txtO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="O" />

            <View
                android:id="@+id/lineLineTwo"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.48"
                android:background="@color/white" />
        </LinearLayout>


        <!--Button
            android:id="@+id/googleSignInButton"
            android:layout_width="365dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:text="Login with your Google account" /-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">


            <!-- Texto "cuenta" -->
            <TextView
                android:id="@+id/cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-2dp"
                android:text="He leído y acepto la Política de Privacidad"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textColor="#EFE5E5"
                android:textSize="17dp" />

            <!-- Espacio entre el texto y la imagen -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Imagen "imgvec" -->

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:trackTint="#293B72"
                app:thumbTint="@color/white"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/noticiasnuno"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">


            <!-- Texto "cuenta" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-2dp"
                android:text="Recibe las últimas ofertas y \npromociones de nuestros partners"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#EFE5E5"
                android:textSize="17dp" />

            <!-- Espacio entre el texto y la imagen -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Imagen "imgvec" -->

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:trackTint="#293B72"
                app:thumbTint="@color/white"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



    </LinearLayout>



    <Button
        android:id="@+id/emailSignInButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#293B72"
        android:text="ENTRAR"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gotoCreateAccountTextView2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:text="¿Tienes cuenta? Accede aqui"
        android:textColor="@color/white" />

</LinearLayout>
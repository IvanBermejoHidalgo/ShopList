<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:id="@+id/linearSignup2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/_bg___frame_169_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.RegistrarseActivity">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:src="@drawable/logosplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login1" />

    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnprice"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent" android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@drawable/border_selector"
            app:hintTextColor="@color/colorsplash"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/icono_usuario">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombre"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorsplash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="10dp"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@drawable/border_selector"
            app:hintTextColor="@color/colorsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/icono_correo_electronico">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/correo_electronico"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorsplash"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="10dp"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@drawable/border_selector"
            app:hintTextColor="@color/colorsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/icono_telefono">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numero_telefono"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorsplash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de telefono"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="10dp"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@drawable/border_selector"
            app:hintTextColor="@color/colorsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:endIconTint="@color/white"
            app:endIconMode="password_toggle"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/icono_candado">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contraseña"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorsplash"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:textSize="15dp"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="10dp"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@drawable/border_selector"
            app:hintTextColor="@color/colorsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:endIconTint="@color/white"
            app:endIconMode="password_toggle"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/icono_candado">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repetir_contraseña"
                style="@style/color_texto_predeterminado"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorsplash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repite la contraseña"
                android:textSize="15dp"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Aquí va el Spinner de género -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/edittext"
            android:layout_marginTop="10dp"
            android:background="@color/gray_901"
            app:cursorColor="@color/colorsplash"
            android:textColorHint="@color/colorsplash"
            android:textColor="@color/white"
            app:boxStrokeColor="@color/colorsplash"
            app:hintTextColor="@color/colorsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gender_array"
                android:prompt="@string/gender_prompt"
                style="@style/CustomSpinnerStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/linearRowlineone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="28dp"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <View
                android:id="@+id/lineLineOne"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_weight="0.48"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txtO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="O" />

            <View
                android:id="@+id/lineLineTwo"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.48"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/boton_volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorsplash"
        android:text="ENTRAR"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gotoCreateAccountTextView2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:text="¿Tienes cuenta? Accede aqui"
        android:textColor="@color/white" />
</LinearLayout>

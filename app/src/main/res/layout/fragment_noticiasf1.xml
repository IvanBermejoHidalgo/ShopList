<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStylegray_901"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".noticiasf1Fragment">

    <TextView
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|center"

        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/text_border_background"
        android:text="NOTICIAS" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"
        android:text="FORMULA 1" />

    <ImageView android:id="@+id/line_9"
        android:src="@drawable/line_9"
        android:contentDescription="line_9"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_width="340dp"
        android:layout_marginLeft="-30dp"
        android:layout_height="5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</FrameLayout>
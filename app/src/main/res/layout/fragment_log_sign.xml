<FrameLayout android:id="@+id/frameLogsign"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".LogSignFragment"
    style="@style/groupStylegray_900"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View   android:id="@+id/_bg__logsign"
        android:background="@drawable/_bg__logsign_shape"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/imageLogosinfondo"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/logosintesigrande"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:id="@+id/linearColumntienescuenta"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_red_border"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/txtTienescuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="¿Tienes cuenta?"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIniciaSesin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#4169E1"
            android:ellipsize="end"
            android:textSize="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Iniciar sesión"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/txtREGISTRATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_901"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="REGISTRATE"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>

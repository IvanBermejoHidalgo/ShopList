<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde rojo para los lados izquierdo, derecho y superior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0d0e1a" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Borde blanco para la parte inferior -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#293B72" />
            <gradient android:angle="270" android:type="linear" android:startColor="#ff4169e1" android:centerColor="#ff87cefa" android:endColor="#ff4181a8" />
        </shape>
    </item>


</layer-list>
